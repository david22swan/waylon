<div id="radiator">
    <div id="loading">
        <span class="glyphicon glyphicon-refresh loadingIndicator"></span>
        <p>Getting the latest data, just for you.</p>
    </div>
    <div id="stats-rollup" class="container stats-rollup">
        <h3>Successful <span id="successful-jobs" class="label label-success">?</span></h3>
        <h3>Building <span id="building-jobs" class="label label-warning">?</span></h3>
        <h3>Failed <span id="failed-jobs" class="label label-danger">?</span></h3>
        <h3>Total <span id="total-jobs" class="label label-info">?</span></h3>
    </div>
    <table class="table" id="jobs"><tbody></tbody></table>
</div>

<script src="/js/jquery-1.11.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/waylon.js"></script>
<script>
var settings = {
    refresh_interval: <%= gen_config.app_config.refresh_interval %>,
    rebuild_interval: <%= gen_config.app_config.rebuild_interval %>,
    view: '<%= @view_name %>',
};
waylon.init(settings);
</script>
